---
const imagen = "/fotoJulioAndrea.webp";
const imagenMovil = "/fotoJulioAndreaMovil.webp";
---

<section class="hero">
    <div class="hero__content">
        <h1 class="hero__title">Andrea & Julio</h1>
        <p class="hero__subtitle">Nos casamos</p>
    </div>

    <div class="hero__media">
        <img class="hero__img" src={imagen} alt="Foto de Andrea y Julio" />
    </div>

    <div class="hero__media--movil">
        <img
            class="hero__img--movil"
            src={imagenMovil}
            alt="Foto de Andrea y Julio"
        />
    </div>

    <div class="hero__overlay"></div>
</section>

<style>
    .hero {
        position: relative;
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
        overflow: hidden;
        background: #fffaf9;
    }

    .hero__media {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero__img {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        object-position: center 38%;
        filter: saturate(0.95) contrast(0.96);
        transform: scale(1.02);
    }

    .hero__media--movil {
        display: none;
        z-index: 0;
    }

    .hero__img--movil {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center 35%;
        filter: saturate(0.95) contrast(0.96);
        transform: scale(1.02);
    }

    .hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(255, 250, 249, 0);
        pointer-events: none;
        z-index: 1;
    }

    .hero::after {
        content: "";
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 1;
        background: linear-gradient(
            to right,
            rgba(255, 250, 249, 0.45) 0%,
            rgba(255, 250, 249, 0) 20%,
            rgba(255, 250, 249, 0) 80%,
            rgba(255, 250, 249, 0.45) 100%
        );
    }

    .hero__overlay {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 1;
        background:
            radial-gradient(
                900px 500px at 18% 18%,
                rgba(255, 230, 236, 0.35),
                rgba(255, 230, 236, 0) 60%
            ),
            radial-gradient(
                800px 480px at 85% 15%,
                rgba(210, 226, 255, 0.3),
                rgba(210, 226, 255, 0) 55%
            ),
            linear-gradient(
                to bottom,
                rgba(255, 250, 249, 0.5),
                rgba(255, 250, 249, 0.2)
            );
        opacity: 0;
    }

    .hero__content {
        position: relative;
        z-index: 2;
        max-width: 1100px;
        padding-top: clamp(26px, 6vh, 90px);
        padding-left: clamp(16px, 6vw, 80px);
        padding-right: clamp(16px, 4vw, 48px);
    }

    .hero__title {
        margin: 0;
        font-family: "Cormorant Garamond", serif;
        font-weight: 500;
        letter-spacing: 0.04em;
        color: rgba(40, 35, 32, 0.88);
        text-transform: uppercase;
        font-size: clamp(34px, 5.2vw, 78px);
        line-height: 0.92;
        text-shadow: 0 10px 30px rgba(255, 250, 249, 0.9);
        opacity: 0.8;
    }

    .hero__subtitle {
        margin: 10px 0 0;
        font-family: "Montserrat", sans-serif;
        font-size: clamp(11px, 2vw, 16px);
        font-weight: 300;
        letter-spacing: 0.22em;
        padding-left: 1.3em;
        text-transform: uppercase;
        color: rgba(40, 35, 32, 0.75);
        opacity: 0.75;
    }

    @media (min-width: 900px) {
        .hero {
            height: clamp(520px, 72vh, 860px);
        }

        .hero__img {
            object-position: center 36%;
        }
    }

    @media (max-width: 900px) {
        .hero__media {
            display: none;
        }

        .hero__media--movil {
            display: block;
            position: relative;
            width: 100%;
            height: clamp(240px, 36vh, 360px);
            overflow: hidden;
        }

        .hero__content {
            padding: 18px 16px 12px;
            max-width: 100%;
        }

        .hero__title {
            font-size: clamp(28px, 8vw, 44px);
            line-height: 0.95;
            opacity: 0.8;
        }

        .hero__subtitle {
            padding-left: 0;
            font-size: 12px;
            letter-spacing: 0.18em;
        }
        .hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(255, 250, 249, 0.1);
            pointer-events: none;
            z-index: 1;
        }
    }
</style>
